<%= form_for ([ @podcast, @episode ]) do |f| %>
	<% @episode.errors.full_messages.each do |msg| %>
		<div><%= msg %></div>
	<% end %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<div class="field">
		<%= f.label :thumbnail %>
		<%= f.file_field :thumbnail %>
	</div>

	<div class="field">
		<%= f.label :mp3 %>
		<%= f.file_field :mp3 %>
	</div>

	<%= f.submit class: "button button_highlight button_block" %>
<% end %>